extends layout

block content
    h1(class="header")= title
    block posts
    - for (var i = 0; i < posts.length; i++) {
    - post = posts[i]
        div(class="card")
            - if (post.background){
                div(class="card-image")
                    img(class="responsive-img" src="images/" + post.background + ".jpg")
            - }
            div(class="card-content")
                h5(class="header card-title")= post.title
                p!= format(post.content)
            div(class="card-footer")
                - if (post.tags) {
                    div
                        - for (var j = 0; j < post.tags.length; j++) {
                            a(href="/tags/" + post.tags[j])
                                div(class="chip")= post.tags[j]
                        - }
                    span(class="clear")
                - }
    - }
